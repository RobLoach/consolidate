{
    "title": "PHPTransformer",
    "name": "phptransformers/phptransformer",
    "description": "Normalize the API of any PHPTransformer.",
    "keywords": [
        "phptransformer"
    ],
    "homepage": "https://github.com/phptransformers/phptransformer",
    "license": "MIT",
    "authors": [
        {
            "name": "Rob Loach",
            "email": "robloach@gmail.com",
            "homepage": "http://robloach.net",
            "role": "Developer"
        },
        {
            "name": "MacFJA",
            "homepage": "https://github.com/MacFJA",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.3.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.6",
        "scrutinizer/ocular": "~1.1",
        "twig/twig": "~1.18.1",
        "smarty/smarty": "~3.1.21",
        "squizlabs/php_codesniffer": "~2.3",
        "nicmart/string-template": "~0.1"
    },
    "suggest": {
        "twig/twig": "Twig template engine",
        "smarty/smarty": "Smarty(3) template engine",
        "nicmart/string-template": "StringTemplate template engine"
    },
    "autoload": {
        "psr-4": {
            "PhpTransformers\\PhpTransformer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpTransformers\\PhpTransformer\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always --coverage-text --coverage-clover=coverage.clover",
        "phpcs": "phpcs"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}

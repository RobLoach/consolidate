{
    "title": "PHPTransformer",
    "name": "phptransformers/phptransformer",
    "description": "Normalize the API of any PHPTransformer.",
    "keywords": [
        "phptransformer"
    ],
    "homepage": "https://github.com/phptransformers/phptransformer",
    "license": "MIT",
    "authors": [
        {
            "name": "Rob Loach",
            "email": "robloach@gmail.com",
            "homepage": "http://robloach.net",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.3.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.6",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "~2.3",
        "phptransformers/twig": "dev-master",
        "phptransformers/smarty": "dev-master",
        "phptransformers/latte": "dev-master",
        "phptransformers/plates": "dev-master",
        "phptransformers/string-template": "dev-master",
        "phptransformers/phptal": "dev-master",
        "dwoo/dwoo": "dev-beta",
        "phptransformers/dwoo": "dev-master",
        "phptransformers/text-template": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "PhpTransformers\\PhpTransformer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpTransformers\\PhpTransformer\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always --coverage-text --coverage-clover=coverage.clover",
        "phpcs": "phpcs"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
